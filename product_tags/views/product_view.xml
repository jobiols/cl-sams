<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">PRODUCT TAGS add tag</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="tag_id" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"
                       placeholder="Agregue su etiqueta..."/>
            </xpath>
        </field>
    </record>

    <record id="view_product_tag_form" model="ir.ui.view">
        <field name="name">Etiquetas de producto</field>
        <field name="model">product.tag</field>
        <field name="arch" type="xml">
            <form string="Contact Tag">
                <group col="4">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="parent_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_product_category_form" model="ir.actions.act_window">
        <field name="name">Etiquetas de producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.tag</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Hacer click para crear una nueva etiqueta de producto
            </p>
            <p>
                Administre las etiquetas de producto para ayudar a la clasificacion de sus productos.<br/>
                Un producto puede tener varias etiquetas, además estas pueden tener una estructura jerárquica o sea
                un producto con una categoría tiene también la categoria padre.
            </p>
        </field>
    </record>

    <menuitem id="menu_product_category_form"
        action="action_product_category_form"
        name="Etiquetas de producto"
        sequence="1" parent="stock.menu_product_in_config_stock"/>

</odoo>
